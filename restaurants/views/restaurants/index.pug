extends ../layout 

block content 
  a(href="/restaurants/create") Create restaurant
  table.table 
    thead 
      tr 
        th(scope='col') ID 
        th(scope='col') Name 
        th(scope='col') Description 
        th(scope='col') Location
        th(scope='col') 
    tbody 
      each restaurant in restaurants
        tr
          th(scope='row')
            = restaurant.id 
          td= restaurant.name
          td= restaurant.description
          td= restaurant.location
          td
            a(href="restaurants/"+ restaurant.id +"/update" ) Edit
          td
            form.inline(method="post" action="restaurants/" + restaurant.id + "/delete") 
              input(type="hidden" name="id" value=restaurant.id)
              button.link-button(type="submit" name="submit_param" value="submit_value" class="btn")
                = Eliminar 
        